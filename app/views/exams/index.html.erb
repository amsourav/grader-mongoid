<h1>Listing Exams</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Students Enrolled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.name %></td>
        <td><%= exam.date %></td>
        <td><%= exam.exam_students.length %></td>
        <td><%= link_to 'Show', course_exam_path(@course, exam) %></td>
        <td><%= link_to 'Edit', edit_course_exam_path(@course, exam) %></td>
        <td><%= link_to 'Destroy', course_exam_path(@course, exam), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exam', new_course_exam_path(@course) %>
