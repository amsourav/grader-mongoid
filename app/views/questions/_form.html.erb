<%= simple_form_for([@course, @exam, @question]) do |f| %>
  <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :tag, as: :text, input_html: { id: 'tag' } %>
      <%= f.input :mark, as: :integer %>
      <%= f.input :pages, as: :integer %>
      <%= f.association :teacher, collection: Teacher.all, label_method: :name_of_teacher, prompt: "Choose a Grader" %>
    </div>
    <h3>Part Questions</h3>
    <div class="row" id="PartQuestions">
      <div class="col-md-offset-3 col-md-6">
        <%= f.simple_fields_for :part_questions do |q| %>
         <%= render 'part_question_fields', f: q %>
        <% end %>
      </div>
    </div>
    <div class="links">
      <%= link_to_add_association 'Add PartQuestion', f, :part_questions %>
    </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
