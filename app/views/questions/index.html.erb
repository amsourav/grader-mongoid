<h1>Listing Questions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Tag</th>
      <th>Mark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.tag %></td>
        <td><%= question.mark %></td>
        <td><%= link_to 'Show', course_exam_question_path(@course, @exam, question) %></td>
        <td><%= link_to 'Edit', edit_course_exam_question_path(@course, @exam, question) %></td>
        <td><%= link_to 'Destroy', course_exam_question_path(@course, @exam, question), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%# link_to 'New Question', new_course_exam_question_path(@course, @exam) %>
<%= link_to 'New Question', '#new_question', 'data-toggle' => 'modal' %>

<div class="modal fade" id="new_question" >
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New Question</h4>
      </div>
      <div class="modal-body">
          <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
