<div class="container" style="padding-top: 30px;">
  <div class="col-md-offset-3 col-md-6">
    <div class="card card-block">
      <div class="card-header">
        <center><h2>Log in as <%= resource_name.capitalize %></h2></center>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <center><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></center>
        </div>

        <div class="form-actions">
          <center><%= f.button :submit, "Log in" %></center>
        </div>
      <% end %>

      <center><%= render "devise/shared/links" %></center>
    </div>
  </div>
</div>
